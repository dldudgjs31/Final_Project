<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
	<definition name=".mainLayout" template="/WEB-INF/views/layout/layout3.jsp">
	    <put-attribute name="title" value="N차신상" />
	  	<put-attribute name="header" value="/WEB-INF/views/layout/new_header.jsp" />
		<put-attribute name="body" value="/WEB-INF/views/main/main.jsp" />
		<put-attribute name="footer" value="/WEB-INF/views/layout/footer.jsp" />
	</definition>
	
   <!-- 3단 관리자 -->
	<definition name=".adminLayout" template="/WEB-INF/views/admin/layout/layout3.jsp">
	    <put-attribute name="title" value="N차신상_관리자모드" />
	  	<put-attribute name="header" value="/WEB-INF/views/admin/layout/header.jsp" />
		<put-attribute name="body" value="/WEB-INF/views/admin/main/main.jsp" />
		<put-attribute name="footer" value="/WEB-INF/views/layout/footer.jsp" />
	</definition>
	<definition name=".admin.*.*.*" extends=".adminLayout">
		<put-attribute name="body" value="/WEB-INF/views/admin/{1}/{2}/{3}.jsp"/>
	</definition>
	<definition name=".admin.*.*" extends=".adminLayout">
		<put-attribute name="body" value="/WEB-INF/views/admin/{1}/{2}.jsp"/>
	</definition>
	<definition name=".admin.*" extends=".adminLayout">
    	<put-attribute name="body" value="/WEB-INF/views/admin/{1}.jsp" />
	</definition>
	
   <!-- 3단 스토어 -->
	<definition name=".storeLayout" template="/WEB-INF/views/layout/layout3.jsp">
	    <put-attribute name="title" value="N차신상스토어" />
	  	<put-attribute name="header" value="/WEB-INF/views/layout/new_header_store.jsp" />
		<put-attribute name="body" value="/WEB-INF/views/store/main/main.jsp" />
		<put-attribute name="footer" value="/WEB-INF/views/layout/footer.jsp" />
	</definition>
	<definition name=".store.*.*.*" extends=".storeLayout">
		<put-attribute name="body" value="/WEB-INF/views/store/{1}/{2}/{3}.jsp"/>
	</definition>
	<definition name=".store.*.*" extends=".storeLayout">
		<put-attribute name="body" value="/WEB-INF/views/store/{1}/{2}.jsp"/>
	</definition>
	<definition name=".store.*" extends=".storeLayout">
    	<put-attribute name="body" value="/WEB-INF/views/store/{1}.jsp" />
	</definition>
	
	<!-- 순서가 바뀌면 안됨(* 많은것이 위에) -->
	<definition name=".*.*.*.*" extends=".mainLayout">
		<put-attribute name="body" value="/WEB-INF/views/{1}/{2}/{3}/{4}.jsp"/>
	</definition>
	<definition name=".*.*.*" extends=".mainLayout">
		<put-attribute name="body" value="/WEB-INF/views/{1}/{2}/{3}.jsp"/>
	</definition>
	<definition name=".*.*" extends=".mainLayout">
		<put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp"/>
	</definition>
	<definition name=".*" extends=".mainLayout">
    	  <put-attribute name="body" value="/WEB-INF/views/{1}.jsp" />
	</definition>

</tiles-definitions>